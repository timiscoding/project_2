<p id="notice"><%= notice %></p>

<h1>Listing Feedbacks</h1>

<table>
  <thead>
    <tr>
      <th>Task id</th>
      <th>Task</th>
      <th>Task owner id</th>
      <th>Task owner</th>
      <th>Group</th>
      <th>User id</th>
      <th>User first name</th>
      <th>Rating</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.task_id %></td>
        <td><%= feedback.task.activity.title %></td>
        <td><%= feedback.task.user.id %></td>
        <td><%= feedback.task.user.first_name %></td>
        <td><%= feedback.task.activity.group.name %></td>
        <td><%= feedback.user_id %></td>
        <td><%= feedback.user.first_name %></td>
        <td><%= feedback.rating %></td>
        <td><%= feedback.task.done %></td>
        <td><%= link_to 'Show', feedback %></td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feedback', new_feedback_path %>
